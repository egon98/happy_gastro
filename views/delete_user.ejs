<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h5 class="text-light">Delete User</h5>
                </div>
                <div class="card-body p-4">
                    <form action="/delete" method="post" id="delete-form">
                        <div class="mb-3">
                            <label for="id">ID of the User*</label>
                            <input type="text" name="id" class="form-control form-control-lg" placeholder="Enter ID of the User you'd like to delete"/>
                        </div>
                        <div class="mb-3">
                            <input type="submit" name="submit" value="Delete User" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
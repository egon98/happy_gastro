<%- include('layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <div class="table-responsive">
                <% if(users !== '') { %>
                    <table class="table table-striped text-center">
                        <thead>
                        <tr class="table-dark">
                            <th>ID</th>
                            <th>Userame</th>
                            <th>Email</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% users.forEach((row, index) => { %>
                            <tr>
                                <td><% index %></td>
                                <td><% row.name %></td>
                                <td><% row.email %></td>
                                <td>
                                    <a href="" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                </td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No users found in the database.</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>